<% @taxonomy = Taxon.find_by_name("Производитель") %>
<% i = 0 %>
<% @taxonomy.children.each do |item| %>
    <% i+= 1%>
    <div class="fotoblock<%= (i % 2) == 0 ? ' secondcol' : '' %> ">
	<div class="name">
        <%= item.name %>
    </div>
    <div class="image">
    	<a href="<%= seo_url item %>"><img src="<%= item.icon.url(:main) %>" alt=""/></a>
    </div>
</div>
<% end %>
