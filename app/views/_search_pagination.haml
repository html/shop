#numbers
  %table{ :cellspacing => 0, :cellpadding => 0, :border => 0, :align => 'center' }
    %tr
      - page_from = [first_page, (current_page - 1)].max
      - for i in page_from.upto([last_page, page_from + 2].min)
        %td{ :align => 'center', :valign => 'top' }
          - if i == current_page
            = link_to i, '#', :class => 'current'
          - else
            = link_to i, products_path(:keywords => params[:keywords], :page => i)
#next
  - if next_page
    - link_to products_path(:keywords => params[:keywords], :page => next_page) do
      Следующая&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      %br>/
      страница
  - else
    - link_to '#' do
      Следующая&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      %br>/
      страница
